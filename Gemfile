source 'https://rubygems.org'
ruby '2.1.2'

gem 'sinatra'          # our server
gem 'sinatra-contrib'  # for sinatra/json and other libs
gem 'bitly'            # bitly API wrapper gem

group :development do
  gem 'byebug'         # pry > irb
  gem 'shotgun'        # reloads server when files change
end
